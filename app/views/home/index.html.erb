<div class="row" id="main_logo">
  <div class="span12">
    <%= image_tag 'poptocat.jpg' %>
  </div>
</div>

<div class="row">
  <div class="span8 offset4">
    <%= form_tag({:action => :mates}, :class => 'form-horizontal') do %>
      <div class="control-group">
        <label class="control-label">Github login</label>
        <div class="controls">
          <%= text_field_tag :login, '', :placeholder => 'Github login' %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label">Repository name</label>
        <div class="controls">
          <%= text_field_tag :repository, '', :placeholder => 'Repository name' %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= submit_tag 'See github mates !', :class => 'btn btn-primary' %>
        </div>
      </div>

    <% end %>
  </div>
</div>
